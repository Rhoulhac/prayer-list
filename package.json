{
  "name": "react-webpack-boilerplate",
  "version": "1.0.0",
  "description": "Simple react redux",
  "main": "dist/index.js",
  "author": "Kirby",
  "license": "MIT",
  "scripts": {
    "build": "rimraf ./dist && run-s webpack:prod",
    "build:local": "run-s webpack:dll",
    "start": "run-s webpack:dev",
    "webpack:dev": "webpack-dev-server --config ./webpack/config/dev-server.js --hot",
    "webpack:dll": "webpack --config ./webpack/config/dll.js",
    "webpack:prod": "webpack --config ./webpack/config/app.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kirbyjs/react-webpack-boilerplate.git"
  },
  "dependencies": {
    "react": "^16.2.0",
    "react-dom": "^16.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.37",
    "@babel/preset-env": "^7.0.0-beta.37",
    "@babel/preset-react": "^7.0.0-beta.37",
    "@babel/preset-stage-3": "^7.0.0-beta.37",
    "add-asset-html-webpack-plugin": "^2.1.2",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^8.2.1",
    "babel-loader": "^8.0.0-beta.0",
    "css-loader": "^0.28.8",
    "eslint": "^4.16.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.6.1",
    "html-webpack-plugin": "^2.30.1",
    "node-sass": "^4.7.2",
    "npm-run-all": "^4.1.2",
    "react-hot-loader": "^3.1.3",
    "rimraf": "^2.6.2",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.19.1",
    "uglifyjs-webpack-plugin": "^1.1.8",
    "webpack": "^3.10.0",
    "webpack-dev-server": "^2.10.1"
  }
}
